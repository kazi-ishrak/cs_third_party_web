@page
@model cs_third_party_web.Pages.WelcomePageModel
@{
    ViewData["Title"] = "Dashboard";
}
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <title>@ViewData["Title"]</title>
    <link href="~/lib/datatables/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/css/ProjectList.css" rel="stylesheet" />
    <link href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>

<body>

    <div class="Container mt-3">
        <h2 class="text-primary">Dashboard</h2>
        <hr>
        <div class="row mt-4">
            <div class="col-xl-4 col-md-6">
                <div class="card bg-light text-dark mb-3">
                    <div class="card-body" style="">
                        <div id="TotalProjects"> <b>__</b></div>
                        <b>Projects</b>
                    </div>

                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card bg-info text-white mb-3">
                    <div class="card-body">
                        <div id="TotalLogs"><b>__</b></div>
                        <b>Logs Entered Today</b>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card bg-success text-white mb-3">
                    <div class="card-body">
                        <div id="syncedLogs"><b>__</b></div>
                        <b>Logs Synced Today</b>
                    </div>

                </div>
            </div>


        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card mt-3">
                    <div class="card-header bg-primary bg-gradient">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="DataTable_Dashboard" class="display table-bordered text-center" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Project Id</th>
                                        <th>Project Name</th>
                                        <th>Project Type</th>
                                        <th>Last Log Sync Time</th>
                                        <th>Logs Entered Today</th>
                                        <th>Logs Synced Today</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data will be dynamically populated here -->
                                </tbody>
                            </table>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/datatables/dataTables.min.js"></script>
    <script src="~/lib/datatables/datatables.bootstrap5.min.js"></script>
    <script src="~/js/Dashboard.js"></script>
</body>


</html>
